{
  "files": ["**/*.{js,mjs,cjs,jsx}"],
  "env": {
    "browser": true
  },
  "plugins": ["react", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "next/core-web-vitals", 
    "next/typescript"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["node_modules", "build", "dist", "*.min.js"]
}
